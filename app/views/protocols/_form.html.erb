<%= form_for(@protocol) do |f| %>
<div class="module_content">
  <% if @protocol.errors.any? %>
    <div id="error_explanation">
      <h4 class='alert_error'><%= pluralize(@protocol.errors.count, "error") %> prohibited this category from being saved:</h4>

      <ul>
      <% @protocol.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <label><b><%= I18n.t :id %></b></label>
    <%= f.text_field :id %><br /><br /><br /><br />

    <label><b><%= I18n.t :name %></b></label>
    <%= f.text_field :name %><br /><br /><br /><br />
  </fieldset>
  <fieldset>
    <label><b><%= I18n.t :enabled %></b></label>
    <%= f.check_box :enabled %>
  </fieldset>
  
</div>
<footer>
  <div class="submit_link">
    <% if params[:action] == 'new' %>
      <%= f.submit I18n.t(:add_protocol) %>
    <% else %>
      <%= f.submit I18n.t(:edit_protocol) %>
    <% end %>
    <%= submit_tag(I18n.t(:reset), { :name => 'reset', :type => "reset" }) %>
    <%= link_to image_tag("/assets/icn_jump_back.png", :alt => I18n.t(:back), :title => I18n.t(:back)), protocols_path %>
    <% if params[:action] == 'edit' %>
      <%= link_to image_tag("/assets/icn_folder.png", :alt => I18n.t(:show), :title => I18n.t(:show)), @protocol %>
    <% end %>
  </div>
</footer>
<% end %>
