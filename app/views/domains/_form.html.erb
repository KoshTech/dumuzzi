<%= form_for(@domain) do |f| %>
<div class="module_content">
  <% if @domain.errors.any? %>
    <div id="error_explanation">
      <h4 class='alert_error'><%= pluralize(@domain.errors.count, "error") %> prohibited this category from being saved:</h4>

      <ul>
      <% @domain.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
</div>
<footer>
  <div class="submit_link">
    <%= f.submit %>
    <input type="reset" value="Reset">
    <%= link_to image_tag("/assets/icn_jump_back.png", :alt => I18n.t(:back), :title => I18n.t(:back)), domains_path %>
    <% if params[:action] == 'edit' %>
      <%= link_to image_tag("/assets/icn_folder.png", :alt => I18n.t(:show), :title => I18n.t(:show)), @domain %>
    <% end %>
  </div>
</footer>
<% end %>
