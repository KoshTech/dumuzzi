<article class="module width_3_quarter" style="width:920px;">
  <header>
    <h3 class="tabs_involved"><%= I18n.t :listing_hosts_services %></h3>
  </header>

  <div class="tab_container">
	  <div id="tab1" class="tab_content">
      <table class="tablesorter" cellspacing="0">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @hosts_services.each do |hosts_service| %>
          <tr>
            <td></td>
            <td><%= link_to image_tag("/assets/icn_folder.png", :alt => I18n.t(:show), :title => I18n.t(:show)), hosts_service %></td>
            <td><%= link_to image_tag("/assets/icn_edit_article.png", :alt => I18n.t(:edit), :title => I18n.t(:edit)), edit_hosts_service_path(hosts_service) %></td>
            <td><%= button_to I18n.t(:delete), { :action => "destroy", :id => hosts_service.id }, :confirm => I18n.t(:are_you_sure), :method => :delete %></td>
          </tr>
        <% end %>
