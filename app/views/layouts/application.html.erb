<!DOCTYPE html>
<html>
  <head>
    <title>Dumuzzi</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="container">
      <div id="user_nav">
      <% if user_signed_in? %>
        Signed in as <%= current_user.email %>.<br />
        Not you? <%= link_to "Sign out", destroy_user_session_path %>
      <% end %>
      </div>
    </div>
    <%= yield %>

  </body>
</html>
