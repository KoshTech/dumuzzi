<%= form_for(@service) do |f| %>
<div class="module_content">
  <% if @service.errors.any? %>
    <div id="error_explanation">
      <h4 class='alert_error'><%= pluralize(@service.errors.count, "error") %> prohibited this category from being saved:</h4>

      <ul>
      <% @service.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <label><b><%= I18n.t :id %></b></label>
    <%= f.text_field :id %><br /><br /><br /><br />

    <label><b><%= I18n.t :name %></b></label>
    <%= f.text_field :name %><br /><br /><br /><br />
  </fieldset>
  <fieldset>
    <label><b><%= I18n.t :protocol %></b></label>
    <%= f.collection_select(:protocol_id, @protocol, :id, :name, {:prompt => 'Selecione'} ) %>
  </fieldset>
  <fieldset>
    <label><b><%= I18n.t :port %></b></label>
    <%= f.text_field :port %><br /><br /><br /><br />

    <label><b><%= I18n.t :description %></b></label>
    <%= f.text_area :description %><br /><br /><br /><br />
  </fieldset>
  <fieldset>
    <label><b><%#= I18n.t :status %></b></label>
    <%#= f.text_field :status %><br /><br /><br /><br />
  </fieldset>
  <fieldset>
    <label><b><%= I18n.t :monitor %></b></label>
    <%= f.check_box :monitor %><br /><br /><br /><br />
  </fieldset>
  <fieldset>
    <label><b><%= I18n.t :enabled %></b></label>
    <%= f.check_box :enabled %><br /><br /><br /><br />
  </fieldset>
  
</div>
<footer>
  <div class="submit_link">
    <% if params[:action] == 'new' %>
      <%= f.submit I18n.t(:add_service) %>
    <% else %>
      <%= f.submit I18n.t(:edit_service) %>
    <% end %>
    <%= submit_tag(I18n.t(:reset), { :name => 'reset', :type => "reset" }) %>
    <%= link_to image_tag("/assets/icn_jump_back.png", :alt => I18n.t(:back), :title => I18n.t(:back)), services_path %>
    <% if params[:action] == 'edit' %>
      <%= link_to image_tag("/assets/icn_folder.png", :alt => I18n.t(:show), :title => I18n.t(:show)), @service %>
    <% end %>
  </div>
</footer>
<% end %>
