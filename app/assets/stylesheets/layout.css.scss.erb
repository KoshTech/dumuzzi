body {
  margin: 0;
  background-color: #CFCFCF;
}

ul, li {
  list-style:none;
}

a {
  text-decoration:none;
}

#container {
  /*border: 1px solid gray;*/
  margin: 0 10%;
}

header {
  border: 1px solid black;
  margin-top: 10px;
  height: 150px;
  text-align: center;
  background: url(<%= asset_path "dumuzzi-logo.png" %>) #fff scroll 10px no-repeat;
  border: none;
  -moz-border-radius: 13px 13px 0px 0px;
  -webkit-border-radius: 13px 13px 0px 0px;
}

header nav {
  float:right;
  padding:13px 24px 0 0;
}

header nav li {
  float:left;
  font-size:15px;
  line-height:3em;
  text-transform:uppercase;
  padding-left:21px;
  margin-left:19px;
}

header nav li:first-child {
  background:none;
  padding-left:0;
  margin-left:0;
}

header nav li a {
  color:#000;
  text-decoration:none;
}

header nav li.current a, header nav li a:hover {
  color:#CFCFCF;
}

header h2 {
  font-size: 26px;
}

section {
  width: 100%;
  border: none;
  position: relative;
  overflow: hidden;
  margin-top: 10px;
}

section ul {
  float: left;
  width: 100%;
}

section ul img {
  float: left;
}

section ul li {
  float: left;
  margin-top: 8px;
  margin-left: 20px;
}

section ul a {
  color: black;
}

article {
  border: none;
  width: 70%;
  float: left;
  background-color: #fff;
}

article p {
  width: 600px;
}

article #about {
  margin-left: 10px;
}

article #terms {
  margin-left: 10px;
}

article #crud {
  margin-left: 10px;  
  margin-bottom: 10px;  
}

article #crud a {
  color: #104E8B;  
}

article #crud thead th {
  border: 1px solid black;  
  padding: 4px;
}

article #crud tbody td {
  text-align: center;
  border: 1px solid black; 
  padding: 4px; 
}

article #new {
  margin-left: 10px;  
  margin-bottom: 10px;  
}

article #new fieldset {
  border: 0px;
}

article #show {
  margin-left: 10px;
}

article #show td {
  border: 1px solid black;
  padding: 6px;
}

aside {
  border: none;
  text-align: center;
  width: 29%;
  float: right;
  background-color: #fff;
}

aside li {
  margin-top: 10px;
  margin-right: 40px;
}

footer {
  border: none;
  text-align: center;
  margin-top: 10px;
  margin-bottom: 10px;
  height: 100%;
  padding: 30px 0px 30px 0px;
  background-color: #fff;
  -moz-border-radius: 0px 0px 13px 13px;
  -webkit-border-radius: 0px 0px 13px 13px;
}

footer b {
  font-size: 14px;
}
